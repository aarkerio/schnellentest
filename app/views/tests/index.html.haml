%h1 Listing tests

%table
  %thead
    %tr
      %th User
      %th Title
      %th Description
      %th Active
      %th Shared
      %th
      %th
      %th

  %tbody
    - @tests.each do |test|
      %tr
        %td= test.user
        %td= test.title
        %td= test.description
        %td= test.active
        %td= test.shared
        %td= link_to 'Show', test
        %td= link_to 'Edit', edit_test_path(test)
        %td= link_to 'Destroy', test, :method => :delete, :data => { :confirm => 'Are you sure?' }

