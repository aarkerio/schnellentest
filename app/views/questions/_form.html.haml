= form_for @question do |f|
  - if @question.errors.any?
    #error_explanation
      %h2= "#{pluralize(@question.errors.count, "error")} prohibited this question from being saved:"
      %ul
        - @question.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :question
    = f.text_area :question
  .field
    = f.label :hint
    = f.text_area :hint
  .field
    = f.label :explanation
    = f.text_area :explanation
  .field
    = f.label :worth
    = f.number_field :worth
  .field
    = f.label :active
    = f.check_box :active
  .field
    = f.label :type
    = f.check_box :type
  .actions
    = f.submit 'Save'
