= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :fname
    = f.text_field :fname
  .field
    = f.label :lname
    = f.text_field :lname
  .field
    = f.label :uname
    = f.text_field :uname
  .field
    = f.label :passwd
    = f.text_field :passwd
  .field
    = f.label :active
    = f.check_box :active
  .field
    = f.label :group
    = f.text_field :group
  .actions
    = f.submit 'Save'
